<div class="page-header">
  <h3>Neighborhood #<%= @neighborhood.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @neighborhood.name %></dd>

      <dt>City</dt>
      <dd><%= @neighborhood.city %></dd>

    </dl>

    <table class="table table-striped table-hover">
      <tr>
        <th>Venues in Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% @neighborhood.venues.each do |venue| %>
          <tr>
            <td><%= venue.name %></td>
            <td>
              <a href="/venues/<%= venue.id %>" class="btn btn-primary">Show</a>
            </td>
          </tr>
      <% end %>
    </table>

    <table class="table table-striped table-hover">
    <tr>
      <th>Favorite Dish</th>
      <th>...from User</th>
      <th>...at Venue</th>
      <th>Actions</th>
    </tr>

    <% @neighborhood.favorites.each do |favorite| %>
        <tr>
          <td><%= favorite.dish.name %></td>
          <td><%= favorite.user.username %></td>
          <td><%= favorite.venue.name %></td>
          <td>
            <a href="/dishes/<%= favorite.dish.id %>" class="btn btn-primary">Show Dish</a>
            <a href="/users/<%= favorite.user.id %>" class="btn btn-primary">Show User</a>
            <a href="/venues/<%= favorite.venue.id %>" class="btn btn-primary">Show Venue</a>
          </td>
        </tr>
    <% end %>
    </table>
    <div class="page-header">
      <h4>Quick Add Venue</h4>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form action="/create_venue" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Venue Name
            </label>
            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
          </div>

          <!-- Label and input for address -->
          <div class="form-group">
            <label for="address" class="control-label">
              Venue Address
            </label>
            <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="">
          </div>

          <!-- Label and input for neighborhood_id -->
          <div class="form-group">
            <input type="hidden" name="neighborhood_id" Class="form-control" value=<%= @neighborhood.id %>>
          </div>

          <button class="btn btn-success">
            Add Venue
          </button>
        </form>
      </div>
    </div>

    <p></p>

    <div class="btn-group btn-group-justified">
      <a href="/neighborhoods" class="btn btn-primary">
        Back
      </a>
      <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
